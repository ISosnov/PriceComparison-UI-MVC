@page
@model PriceComparisonMVC.Views.Account.LoginModel
@{
    Layout = null; // Якщо сторінка не використовує загальний макет
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="@Url.Content("~/css/logo-style.css")">
</head>
<body>
    <div class="main-container">
        <div class="text-center mb-4">
            <h1 class="text-primary">LOGO</h1>
        </div>

        <div class="button-block">
            <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary">Увійти</a>
            <a href="@Url.Action("Register", "Account")" class="btn btn-primary">Зареєстуватись</a>
        </div>

        <form method="post" action="@Url.Action("Login", "Account")">
            <div class="mb-3">
                <input type="email" name="Email" class="form-control" id="email" placeholder="E-Mail" required>
            </div>

            <div class="mb-4">
                <input type="password" name="Password" class="form-control" id="password" placeholder="Пароль" required>
            </div>

            <div class="mb-4 text-center">
                <button type="submit" class="btn btn-primary">Увійти</button>
            </div>
        </form>

        <div class="text-center">
            <p class="text-muted">Продовжити через</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="#" class="text-decoration-none text-secondary">Google</a>
                <a href="#" class="text-decoration-none text-secondary">Apple</a>
                <a href="#" class="text-decoration-none text-secondary">Facebook</a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

