@model PriceComparisonMVC.Models.User.UserProfileModel

@{
    ViewData["Title"] = "Особистий кабінет";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/header-style.css" />
    <link rel="stylesheet" href="~/css/pages/footer-style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}


<partial name="_Header" />

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <img src="@(string.IsNullOrEmpty(Model.AvatarUrl) ? "/images/default-avatar.png" : Model.AvatarUrl)"
                             alt="@Model.Username" class="rounded-circle img-fluid" style="width: 150px; height: 150px; object-fit: cover;">
                    </div>
                    <h5 class="card-title mb-3">@Model.Username</h5>
                    <p class="card-text text-muted">
                        <i class="fas fa-envelope me-2"></i> @Model.Email
                    </p>
                    @if (Model.RegistrationDate.HasValue)
                    {
                        <p class="card-text text-muted">
                            <i class="fas fa-calendar-alt me-2"></i> З нами з @Model.RegistrationDate.Value.ToString("dd.MM.yyyy")
                        </p>
                    }
                    <a href="#" class="btn btn-primary mt-3">Редагувати профіль</a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs" id="profileTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="reviews-tab" data-bs-toggle="tab"
                                    data-bs-target="#reviews" type="button" role="tab"
                                    aria-controls="reviews" aria-selected="true">
                                Мої відгуки
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="favorites-tab" data-bs-toggle="tab"
                                    data-bs-target="#favorites" type="button" role="tab"
                                    aria-controls="favorites" aria-selected="false">
                                Обране
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="orders-tab" data-bs-toggle="tab"
                                    data-bs-target="#orders" type="button" role="tab"
                                    aria-controls="orders" aria-selected="false">
                                Історія переглядів
                            </button>
                        </li>
                    </ul>
                </div>

                <div class="card-body">
                    <div class="tab-content" id="profileTabsContent">
                        <div class="tab-pane fade show active" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                            <h5 class="card-title">Ваші відгуки</h5>
                            @if (Model.ReviewsCount > 0)
                            {
                                <p>У вас є @Model.ReviewsCount відгуків.</p>
                                <!-- Тут можна додати відображення відгуків -->
                            }
                            else
                            {
                                <p class="text-muted">Ви ще не залишили жодного відгуку.</p>
                            }
                        </div>
                        <div class="tab-pane fade" id="favorites" role="tabpanel" aria-labelledby="favorites-tab">
                            <h5 class="card-title">Обрані товари</h5>
                            <p class="text-muted">Тут відображатимуться товари, які ви додали до обраного.</p>
                            <!-- Тут буде відображення обраних товарів -->
                        </div>
                        <div class="tab-pane fade" id="orders" role="tabpanel" aria-labelledby="orders-tab">
                            <h5 class="card-title">Ваша історія переглядів</h5>
                            <p class="text-muted">Тут відображатимуться нещодавно переглянуті товари.</p>
                            <!-- Тут буде відображення переглянутих товарів -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_Footer" />