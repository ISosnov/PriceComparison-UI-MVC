@* @model PriceComparisonMVC.Models.SmartComparisonViewModel *@
@{
    ViewData["Title"] = "Розумне порівняння товарів";
}

<div class="container-xxl mt-4">
    <h1 class="text-center mb-4">Розумне порівняння товарів</h1>

    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="m-0 font-weight-bold">
                        <i class="fas fa-robot me-2"></i>Аналіз відмінностей
                    </h5>
                    <a href="@Url.Action("Index", "Compare")" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-arrow-left me-1"></i>Повернутись до порівняння
                    </a>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="card-title">@Model.ProductAName</h5>
                                </div>
                                <div class="card-body text-center">
                                    <img src="@Model.ProductAImageUrl" alt="@Model.ProductAName" class="img-fluid" style="max-height: 200px;"
                                         onerror="this.src='@Url.Content("~/images/placeholder.png")'; this.onerror='';">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="card-title">@Model.ProductBName</h5>
                                </div>
                                <div class="card-body text-center">
                                    <img src="@Model.ProductBImageUrl" alt="@Model.ProductBName" class="img-fluid" style="max-height: 200px;"
                                         onerror="this.src='@Url.Content("~/images/placeholder.png")'; this.onerror='';">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card mb-4">
                        <div class="card-header">
                            <h5><i class="fas fa-lightbulb me-2"></i>Інтелектуальний аналіз</h5>
                        </div>
                        <div class="card-body">
                            <div class="alert alert-info">
                                @Model.Explanation
                            </div>
                        </div>
                    </div>

                    <h4 class="mt-4 mb-3">Ключові відмінності</h4>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Характеристика</th>
                                    <th>@Model.ProductAName</th>
                                    <th>@Model.ProductBName</th>
                                    <th>Переможець</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var difference in Model.KeyDifferences)
                                {
                                    <tr>
                                        <td>@difference.CharacteristicName</td>
                                        <td class="@(difference.Winner == "A" ? "table-success" : "")">@difference.ProductAValue</td>
                                        <td class="@(difference.Winner == "B" ? "table-success" : "")">@difference.ProductBValue</td>
                                        <td>
                                            @if (difference.Winner == "A")
                                            {
                                                <span class="badge bg-primary">@Model.ProductAName</span>
                                            }
                                            else if (difference.Winner == "B")
                                            {
                                                <span class="badge bg-primary">@Model.ProductBName</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Рівно</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>