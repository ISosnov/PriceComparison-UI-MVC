@model PriceComparisonMVC.Controllers.SmartComparisonViewModel

@{
    ViewData["Title"] = "Розумне порівняння";
}

<style>
    .products-comparison {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

        .products-comparison .product {
            flex: 1;
            text-align: center;
        }
            /* Збільшення розміру зображень до 400x400px */
            .products-comparison .product img {
                width: 400px;
                height: 400px;
                object-fit: contain;
            }

    .explanation {
        margin-bottom: 20px;
    }

    .key-differences table {
        width: 100%;
        border-collapse: collapse;
    }

    .key-differences th,
    .key-differences td {
        border: 1px solid #ccc;
        padding: 8px;
    }

    footer {
        margin-top: 30px;
        text-align: center;
    }
</style>

<h1>Розумне порівняння: @Model.ProductAName vs @Model.ProductBName</h1>

<div class="products-comparison">
    <div class="product">
        <h2>@Model.ProductAName</h2>
        <img src="@Model.ProductAImageUrl" alt="@Model.ProductAName" />
    </div>
    <div class="product">
        <h2>@Model.ProductBName</h2>
        <img src="@Model.ProductBImageUrl" alt="@Model.ProductBName" />
    </div>
</div>

<div class="explanation">
    <h3>Пояснення</h3>
    <h4>@Model.Explanation</h4>
</div>

@if (Model.KeyDifferences != null && Model.KeyDifferences.Any())
{
    <div class="key-differences">
        <h3>Ключові відмінності</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Характеристика</th>
                    <th>@Model.ProductAName</th>
                    <th>@Model.ProductBName</th>
                    <th>Переможець</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var diff in Model.KeyDifferences)
                {
                    <tr>
                        <td>@diff.CharacteristicName</td>
                        <td>@diff.ProductAValue</td>
                        <td>@diff.ProductBValue</td>
                        <td>@diff.Winner</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>Ключових відмінностей не знайдено.</p>
}

<footer>
    <p>Дані надані від AI-провайдера</p>
</footer>
